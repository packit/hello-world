summary:
    Check SRPM files with csmock
discover:
    how: shell
    tests:
      - name: csmock
        test: csmock -t cppcheck,clang /tmp/*.src.rpm
prepare:
  - name: packages
    how: install
    package:
    - csmock
  - how: shell
    script: cd /tmp && curl -O ${PACKIT_SRPM_URL}
execute:
    how: tmt