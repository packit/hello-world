summary:
    Check SRPM files with csmock
discover:
    how: shell
    tests:
      - name: csmock
        test: "csmock --all-tools /tmp/*.src.rpm -o $TMT_TEST_DATA --force && cp $TMT_TEST_DATA/scan-results.html $TMT_TEST_DATA/viewer.html && echo -e '- result: pass\n  name: /' > $TMT_TEST_DATA/results.yaml"
        result: custom
        require: bash
prepare:
  - name: packages
    how: install
    package:
    - csmock
  - how: shell
    script: cd /tmp && curl -O ${PACKIT_SRPM_URL}
execute:
    how: tmt